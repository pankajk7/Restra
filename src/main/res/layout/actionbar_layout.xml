<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actionbar_header"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="@color/primary_color"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_actionbar_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:gravity="center_vertical|left" >

        <LinearLayout
            android:id="@+id/actionbar_layout_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:visibility="gone"
            android:background="@color/primary_color">

            <Button
                android:id="@+id/actionbar_button_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0" />
        </LinearLayout>

        <com.clairvoyant.Components.TextViewRegular
            android:id="@+id/actionbar_textview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:text="Title" />

        <LinearLayout
            android:id="@+id/actionBar_layout_menu"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="invisible" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_launcher" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>